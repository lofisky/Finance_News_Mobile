<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             x:Class="FinanceNewsMobile.MainPage"
             xmlns:viewmodel="clr-namespace:FinanceNewsMobile.ViewModel"
             Shell.NavBarIsVisible="False">

    <ContentPage.BindingContext>
        <viewmodel:MainViewModel/>
    </ContentPage.BindingContext>

    <CollectionView
                ItemsSource="{Binding NewsArticles}"
                x:Name="NewsCollectionView"
                Margin="0,10"
                VerticalOptions="FillAndExpand">

        <CollectionView.Header>
            <VerticalStackLayout Spacing="25">

                <Label  
                Text="Finance News" 
                Style="{StaticResource Headline}"  
                SemanticProperties.HeadingLevel="Level1" />

                <Label  
                Text="Latest Updates"  
                Style="{StaticResource SubHeadline}"  
                SemanticProperties.HeadingLevel="Level2"  
                SemanticProperties.Description="Welcome to dot net Multi platform App U I" />

                <BoxView
                HeightRequest="2"
                BackgroundColor="Gray"
                HorizontalOptions="Fill"
                Margin="30,0" />
            </VerticalStackLayout>
        </CollectionView.Header>

        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame BorderColor="Lavender" CornerRadius="10" Margin="0,5" Padding="10">
                    <VerticalStackLayout Spacing="10">
                        <Image 
                            Source="{Binding UrlToImage}"
                            Aspect="AspectFill"
                            HeightRequest="150"
                            />
                        <Label 
                            Text="{Binding Title}" 
                            FontAttributes="Bold" 
                            FontSize="18" 
                            LineBreakMode="TailTruncation" 
                            MaxLines="8" />
                        <Label FontSize="14">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="{Binding Description}"/>
                                    <Span x:Name="ClickableSpan"
                                          Text=" Read More"
                                      TextColor="Blue"
                                      FontAttributes="Bold">
                                        <Span.GestureRecognizers>
                                            <TapGestureRecognizer 
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.OpenUrlCommand}"
                                                CommandParameter="{Binding Url}"
                                                Tapped="OnUrlTapped">
                                            </TapGestureRecognizer>
                                        </Span.GestureRecognizers>
                                    </Span>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Label 
                            Text="{Binding FormattedPublishedAt}" 
                            FontSize="11" 
                            TextColor="Gray" 
                            HorizontalOptions="End" />
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
